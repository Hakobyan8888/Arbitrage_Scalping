<UserControl x:Class="ArbitrageDesktopApp.Views.HomeExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArbitrageDesktopApp.Views" xmlns:explorers="clr-namespace:ArbitrageDesktopApp.ViewModels.Explorers" d:DataContext="{d:DesignInstance Type=explorers:HomeExplorerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" Width="500">
        <Button Content="Start" 
                Background="Green"
                Command="{Binding StartArbitrageCommand}"
                Margin="15"
                Width="250"
                FontSize="50"
                FontWeight="Bold"
                Height="150"/>
        <Button Content="Stop" 
                Background="Red"
                Margin="15"
                Width="250"
                Height="150"
                FontSize="50"
                FontWeight="Bold"
                Command="{Binding StopArbitrageCommand}"/>
    </StackPanel>
</UserControl>
